<?xml version="1.0" encoding="utf-8"?>
<com.qianfeng.scrollviewandviewpagerandlistview.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic1" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"></android.support.design.widget.TabLayout>

        <com.qianfeng.scrollviewandviewpagerandlistview.ScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</com.qianfeng.scrollviewandviewpagerandlistview.MyScrollView>
